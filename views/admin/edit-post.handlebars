<h1>Edit Post</h1>

<form method="post">

    <a href="/admin/delete-post/{{post.id}}">Delete</a>
    <button type="submit">Save</button>

    <input type="text" name="title" value="{{post.title}}">
    <input type="hidden" name="entry">

    <div class="block-editor"></div>

</form>

<script src="/assets/admin/js/editor/public/js/main.js"></script>
<script>
editor.core.main({
    container: '.block-editor',
    initialContent: `{{{post.entry}}}`,
    onChange: (content) => {
        document.querySelector('input[name="entry"]').value = content;
    }
});
</script>